/* pages/record/index.wxss */
.picker {
  width: 90%;
  margin: 0 auto;

}

.picker span {
  font-size: 25rpx;
  font-weight: bolder;
}

.itemtop {
  width: 90%;
  display: flex;
  margin: 0 auto; 
  box-shadow: 2rpx 2rpx 2rpx 2rpx gray;
  padding: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}

.itemtop .time {
  flex: 2;
  font-size: 30rpx;
  line-height: 40rpx;
}

.itemtop .status {
  flex: 1;
  text-align: right;
  font-weight: bolder;
  color: gray;
  font-size: 30rpx;
}
.status{
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}
.price{
  color: var(--error-color);
  font-weight: bolder;
}